{
  "name": "@lamnhan/ngx-useful",
  "version": "0.0.0",
  "description": "A collection of helpful Angular services, pipes, ....",
  "author": "Lam Nhan",
  "homepage": "https://lamnhan.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:lib": "ng build useful && cpy README.md LICENSE dist/useful",
    "build:app": "ng build",
    "build": "npm run build:app && npm run build:lib",
    "deploy:lib": "cd ./dist/useful && npm publish && cd ../../",
    "deploy:app": "git push",
    "deploy": "npm run deploy:app && npm run deploy:lib",
    "lint": "ng lint useful",
    "test": "ng test useful",
    "e2e": "ng e2e",
    "coverage": "cat ./coverage/*/lcov.info | coveralls",
    "webdriver-update-ci": "webdriver-manager update --standalone false --gecko false --versions.chrome 2.37"
  },
  "keywords": [
    "angular",
    "service",
    "pipe"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lamnhan/ngx-useful.git"
  },
  "bugs": {
    "url": "https://github.com/lamnhan/ngx-useful/issues"
  },
  "dependencies": {
    "@angular/animations": "~12.0.0",
    "@angular/common": "~12.0.0",
    "@angular/compiler": "~12.0.0",
    "@angular/core": "~12.0.0",
    "@angular/fire": "^6.1.5",
    "@angular/forms": "~12.0.0",
    "@angular/platform-browser": "~12.0.0",
    "@angular/platform-browser-dynamic": "~12.0.0",
    "@angular/router": "~12.0.0",
    "@lamnhan/schemata": "0.0.7",
    "@ngneat/transloco": "^2.20.1",
    "firebase": "^8.6.2",
    "howler": "^2.2.1",
    "localforage": "^1.9.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.0",
    "@angular/cli": "~12.0.0",
    "@angular/compiler-cli": "~12.0.0",
    "@types/howler": "^2.2.2",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^12.0.0",
    "typescript": "~4.2.3"
  }
}
